<div style="vertical-align: top; display: inline-block; margin-top: 1rem;">
  <form class="uk-panel uk-panel-box uk-form" {{action 'addAccount' on="submit"}}>
    <div class="uk-form-row">
      {{input value=account required="true" class="uk-width-1-1 uk-form-large" type="text" placeholder="Account"}}
    </div>
    <div class="uk-form-row">
      <button class="uk-width-1-1 uk-button uk-button-primary uk-button-large" type="submit">
        Add account
      </button>
    </div>
  </form>

  {{#each account in model.accounts}}
    <form class="uk-panel uk-panel-box uk-form" style="margin-top: 1.2rem;" {{action 'accountDetails' account.id on="submit"}}>
      <div class="uk-form-row">
        {{input value=account.name class="uk-width-1-1 uk-form-large" type="text" disabled="true" }}
      </div>
      <div class="uk-form-row">
        <button class="uk-width-1-1 uk-button uk-button-primary uk-button-large" type="submit">
          Details
        </button>
      </div>
    </form>
  {{/each}}
</div>
